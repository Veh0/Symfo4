{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>
    <a href="{{ app.request.headers.get('referer') }}" class="btn white-text">back to list</a>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Pseudo</th>
                <td>{{ user.pseudo }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ user.mail }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ user.address }}</td>
            </tr>
            <tr>
                <th>PostalCode</th>
                <td>{{ user.postalCode }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ user.city }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ user.phone }}</td>
            </tr>
            <tr>
                <th>Collection</th>
                <td>{{ user.collection ? user.collection|join(', ') : '' }}</td>
            </tr>
            {% if is_granted("ROLE_ADMIN") %}
            
            <tr>
                <td>
                    <form action="{{ path('user_role', { 'id' : user.id }) }}" method="post">
                        {% if user.roles == ["ROLE_USER"] %}
                            <button type="submit" class='btn' value='toAdmin' name='toRole'>Promouvoir</button>
                        {% else %}
                            <button type="submit" class='btn' value='toUser' name='toRole'>RÃ©trograder</button>
                        {% endif %}
                    </form>
                </td>
            </tr>
            {% endif %}
        </tbody>
    </table>

    

    <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn white-text">edit</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
