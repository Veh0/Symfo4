{% extends 'base.html.twig' %}

{% block title %}Actu index{% endblock %}

{% block body %}
    <h1>Actu index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for actu in actus %}
            <tr>
                <td>{{ actu.title }}</td>
                <td>{{ actu.description }}</td>
                <td>
                    <a href="{{ path('actu_show', {'id': actu.id}) }}" class="btn white-text">show</a>
                    {% if is_granted("ROLE_ADMIN") %}
                        <a href="{{ path('actu_edit', {'id': actu.id}) }}" class="btn white-text">edit</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('actu_new') }}" class="btn white-text">Create new</a>
{% endblock %}
