{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>
    <a href="{{ app.request.headers.get('referer') }}" class="btn white-text">back to list</a>
    <table class="table">
        <tbody>
            <tr>
                <th>Artist</th>
                <td><a href="{{ path('artist_show', {'id': artist_id}) }}">{{ product.artistId }}</a></td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ product.title }}</td>
            </tr>
            <tr>
                <th>ProductionDate</th>
                <td>{{ product.productionDate ? product.productionDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
        </tbody>
    </table>

    {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('product_edit', {'id': product.id}) }}" class="btn white-text">edit</a>
    {{ include('product/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
